{
  "type": "module",
  "scripts": {
    "postinstall": "npm run composer:install",
    "nette:dev": "concurrently -n=nette,vite -c=blue,yellow \"docker compose up\" \"npm run vite:dev\"",
    "nette:serve": "concurrently -n=nette,vite -c=blue,yellow \"docker compose up\" \"npm run vite:serve\"",
    "vite:dev": "npx vite",
    "vite:build": "npx vite build",
    "vite:serve": "npx vite preview",
    "composer:install": "docker run --rm --interactive --tty --volume ${PWD}:/app --volume ${COMPOSER_HOME:-$HOME/.composer}:/tmp composer install",
    "composer:update": "docker run --rm --interactive --tty --volume ${PWD}:/app --volume ${COMPOSER_HOME:-$HOME/.composer}:/tmp composer update"
  },
  "dependencies": {
    "nette-forms": "^3.2.0"
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "vite": "^2.4.4"
  }
}
